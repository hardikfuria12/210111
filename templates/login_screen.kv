#:kivy 2.1.0
<LoginScreen>:
    MDFloatLayout:
        spacing: "15dp"
        MDTextField:
            id: username
            hint_text: "Username"
            size_hint: 0.5, None
            pos_hint: {"x": 0.25, "y": 0.5}
        MDTextField:
            id: password
            hint_text: "Password"
            size_hint: 0.5, None
            pos_hint: {"x": 0.25, "y": 0.4}
        MDRaisedButton:
            text: "Login"
            size_hint: 0.3, None
            pos_hint: {"x": 0.35, "y": 0.3}
            on_release: root.validate_login(username.text,password.text)